    "require": {
        "php": ">= 8.0",
        "flarum/core": "^1.0.0",
        "patrickschur/language-detection": "^5.2.0"
    },
    "autoload": {
        "psr-4": {
            "Blomstra\\Spam\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Blomstra\\Spam\\Tests\\": "tests/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Spam prevention",
            "category": "moderation",
            "icon": {
                "image": "resources/assets/logo.png",
                "backgroundColor": "#E3E7F1",
                "backgroundSize": "60%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "extiverse": {
            "discuss": "https://discuss.flarum.org/d/31524"
        }
    }
